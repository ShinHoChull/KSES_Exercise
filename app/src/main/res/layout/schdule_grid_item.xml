<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/schedule_choice_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#ececf9"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/check_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#2d97ee"

                />

            <FrameLayout
                android:id="@+id/schedule_startView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/startSubView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="#ff3a7f"
                    android:orientation="vertical"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_item_gridview"
                    android:textSize="18dp"
                    />
            </FrameLayout>

        </FrameLayout>
        <TextView
            android:visibility="invisible"
            android:id="@+id/choice_start_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START!"
            android:textSize="7dp"
            android:textColor="#ff3a7f"
            android:gravity="center"
            />
    </LinearLayout>



</LinearLayout>
