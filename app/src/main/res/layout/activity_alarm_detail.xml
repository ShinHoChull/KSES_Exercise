<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <FrameLayout
            android:id="@+id/content_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/c_step2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="#f4f4f4"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#88929c"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="알람 시간을 선택해 주세요."
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/r_medium"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="시작일 기준으로 한달 동안 알람이 울립니다."
                        android:textColor="#d71447"
                        android:fontFamily="@font/r_reguar"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#88929c"/>

            </LinearLayout>

            <TimePicker
                android:layout_marginTop="10dp"
                android:id="@+id/timepicker"
                android:layout_height="170dp"
                android:layout_width="match_parent"
                android:timePickerMode="spinner"
                android:background="@drawable/timepicker_round"
                android:theme="@style/MyTimePickerWidgetStyle"
                style="@style/MyTimePickerWidgetStyle"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="요일반복"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/r_medium"
                />

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/sun_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/sun"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="일"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/mon_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/mon"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="월"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tue_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/tue"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="화"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/wed_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/wed"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="수"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/thu_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/thu"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="목"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/fri_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/fri"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="금"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/sat_cir"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/main_cir"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/sat"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#222222"
                        android:text="토"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/r_reguar"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/alarm_detail_success"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/alarm_detail_success_bt"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="설정 완료"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/r_medium"
                />




        </LinearLayout>


        <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>